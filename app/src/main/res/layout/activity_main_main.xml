<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_color_three"
        android:layout_marginTop="@dimen/layout_margin_two"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_two">

        <ImageView
            android:id="@+id/image_main_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_route_gray"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/image_main_start_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_transist_input_start"
            android:layout_toRightOf="@id/image_main_exchange"
            android:layout_marginLeft="@dimen/layout_margin_two"
            android:layout_marginTop="@dimen/layout_margin_four"/>

        <EditText
            android:id="@+id/edit_main_start_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_one"
            android:layout_toRightOf="@id/image_main_start_address"
            android:background="@android:color/transparent"
            android:textColor="@color/gray_color_three"
            android:layout_marginLeft="@dimen/layout_margin_three"
            android:onClick="btnClick"
            android:clickable="true"
            android:hint="@string/edit_main_start_address_hint"/>

        <View
            android:id="@+id/view_main_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_color_three"
            android:layout_toRightOf="@id/image_main_exchange"
            android:layout_below="@id/edit_main_start_address"
            android:layout_marginLeft="@dimen/layout_margin_two"
           />

        <ImageView
            android:id="@+id/image_main_end_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_main_line"
            android:src="@drawable/icon_transist_input_end"
            android:layout_toRightOf="@id/image_main_exchange"
            android:layout_marginLeft="@dimen/layout_margin_two"
            android:layout_marginTop="@dimen/layout_margin_four"/>

        <EditText
            android:id="@+id/edit_main_end_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_one"
            android:layout_toRightOf="@id/image_main_end_address"
            android:layout_below="@id/view_main_line"
            android:background="@android:color/transparent"
            android:textColor="@color/gray_color_three"
            android:layout_marginLeft="@dimen/layout_margin_three"
            android:hint="@string/edit_main_start_address_hint"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_color_three" />

    <Button
        android:id="@+id/button_main_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_main_search"
        android:paddingTop="@dimen/layout_padding_one"
        android:paddingBottom="@dimen/layout_padding_one"
        android:background="@drawable/style_button_main_search_bg"
        android:layout_margin="@dimen/layout_margin_one"
        android:onClick="btnClick"
        android:textSize="@dimen/text_typeface_size_two"/>

</LinearLayout>
